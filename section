  <script>
    // Smooth scroll for sidebar links
    document.querySelectorAll(".section-nav-item a").forEach(function (link) {
      link.addEventListener("click", function (e) {
        e.preventDefault();
        var targetId = this.getAttribute("href");
        var target = document.querySelector(targetId);
        if (target) {
          var offset = 90; // header height approx
          var rect = target.getBoundingClientRect();
          var scrollTop = window.pageYOffset || document.documentElement.scrollTop;
          var top = rect.top + scrollTop - offset;

          window.scrollTo({
            top: top,
            behavior: "smooth",
          });
        }
      });
    });

    // Smooth scroll for mobile chips
    document.querySelectorAll(".stacked-item").forEach(function (chip) {
      chip.addEventListener("click", function () {
        var targetId = this.getAttribute("data-target");
        var target = document.querySelector(targetId);
        if (target) {
          var offset = 80;
          var rect = target.getBoundingClientRect();
          var scrollTop = window.pageYOffset || document.documentElement.scrollTop;
          var top = rect.top + scrollTop - offset;

          window.scrollTo({
            top: top,
            behavior: "smooth",
          });
        }
      });
    });

    // Toggle details (accordion style)
    document.querySelectorAll(".section-card").forEach(function (card) {
      var btn = card.querySelector(".toggle-details");
      if (!btn) return;
      btn.addEventListener("click", function () {
        var collapsed = card.classList.toggle("collapsed");
        var icon = btn.querySelector(".icon");
        if (icon) {
          icon.textContent = collapsed ? "›" : "⌄";
        }
      });
    });

    // Highlight active section in sidebar + mobile chips on scroll
    var sectionCards = Array.prototype.slice.call(
      document.querySelectorAll(".section-card")
    );

    function handleScrollSpy() {
      var scrollPosition =
        window.pageYOffset || document.documentElement.scrollTop;
      var offset = 120;

      var currentId = null;
      for (var i = 0; i < sectionCards.length; i++) {
        var rect = sectionCards[i].getBoundingClientRect();
        var top = rect.top + scrollPosition - offset;
        if (scrollPosition >= top) {
          currentId = sectionCards[i].id;
        }
      }

      if (currentId) {
        // Sidebar
        document
          .querySelectorAll(".section-nav-item a")
          .forEach(function (link) {
            link.classList.toggle(
              "active",
              link.getAttribute("href") === "#" + currentId
            );
          });
        // Mobile chips
        document.querySelectorAll(".stacked-item").forEach(function (chip) {
          chip.classList.toggle(
            "active",
            chip.getAttribute("data-target") === "#" + currentId
          );
        });
      }
    }

    window.addEventListener("scroll", handleScrollSpy);
    window.addEventListener("load", handleScrollSpy);
  </script>
</body>
</html>
